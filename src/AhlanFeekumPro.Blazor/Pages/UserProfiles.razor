                    <Field>
                        <FieldLabel>@L["IdentityRole"]</FieldLabel>
                        <Select TValue="Guid?" @bind-SelectedValue="@NewUserProfile.IdentityRoleId">
                            <SelectItem TValue="Guid?" Value="null"></SelectItem>
                            @foreach (var identityRole in IdentityRolesCollection)
