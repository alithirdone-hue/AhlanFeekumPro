@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        @if (SelectedUserProfiles.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-2">
                @if (AllUserProfilesSelected)
                {
                    <p class="lead mb-0">
                        @L["AllItemsAreSelected", TotalCount]
                    </p>
                }
                else
                {
                    <p class="lead mb-0">
                        @if (SelectedUserProfiles.Count > 1)
                        {
                            @L["NumberOfItemsOnThisPageAreSelected", SelectedUserProfiles.Count]
                        }
                        else
                        {
                            @L["OneItemOnThisPageIsSelected"]
                        }
                    </p>
                }
                    
                <div>
                    @if ((SelectedUserProfiles.Count == PageSize || SelectedUserProfiles.Count == UserProfileList.Count) && TotalCount > SelectedUserProfiles.Count)
                    {
                        if (!AllUserProfilesSelected)
                        {
                            <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                        }
                        else
                        {
                            <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                        }
                    }
                    
                    <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedUserProfilesAsync">
                        <Icon Name="@IconName.Delete" /> @L["Delete"]
                    </Button>
                </div>
            </div>
            
            <hr class="my-1 mx-0"/>
        }
        <DataGrid TItem="UserProfileWithNavigationPropertiesDto"
                  Data="UserProfileList"
                  
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedUserProfiles"
                  RowSelectable="@((args) => CanDeleteUserProfile)"
                  SelectedRowsChanged="SelectedUserProfileRowsChanged"
                  
                  
                  
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                
                @if (CanDeleteUserProfile && UserProfileList.Any())
                {
                    <DataGridMultiSelectColumn TItem="UserProfileWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                
                <DataGridEntityActionsColumn TItem="UserProfileWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="UserProfileWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="UserProfileWithNavigationPropertiesDto"
                                          Visible="@CanEditUserProfile"
                                          Clicked="async () => await OpenEditUserProfileModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="UserProfileWithNavigationPropertiesDto"
                                          Visible="@CanDeleteUserProfile"
                                          Clicked="() => DeleteUserProfileAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
               
              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.Name"
                      Caption="@L["Name"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.Email"
                      Caption="@L["Email"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.PhoneNumber"
                      Caption="@L["PhoneNumber"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.Latitude"
                      Caption="@L["Latitude"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.Longitude"
                      Caption="@L["Longitude"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.Address"
                      Caption="@L["Address"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.ProfilePhoto"
                      Caption="@L["ProfilePhoto"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="UserProfile.IsSuperHost"
                      Caption="@L["IsSuperHost"]">
                    <DisplayTemplate>
                        @if (context.UserProfile.IsSuperHost)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>


              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="IdentityRole.Name"
                      Caption="@L["IdentityRole"]">
              </DataGridColumn>

              <DataGridColumn TItem="UserProfileWithNavigationPropertiesDto"
                      Field="IdentityUser.UserName"
                      Caption="@L["IdentityUser"]">
              </DataGridColumn>

            </DataGridColumns>
            
            
        </DataGrid>
    </CardBody>
</Card>

