                     </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["PropertyDescription"] *</FieldLabel>
                            <MemoEdit @bind-Text="@NewSiteProperty.PropertyDescription"  >
