@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        @if (SelectedSiteProperties.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-2">
                @if (AllSitePropertiesSelected)
                {
                    <p class="lead mb-0">
                        @L["AllItemsAreSelected", TotalCount]
                    </p>
                }
                else
                {
                    <p class="lead mb-0">
                        @if (SelectedSiteProperties.Count > 1)
                        {
                            @L["NumberOfItemsOnThisPageAreSelected", SelectedSiteProperties.Count]
                        }
                        else
                        {
                            @L["OneItemOnThisPageIsSelected"]
                        }
                    </p>
                }
                    
                <div>
                    @if ((SelectedSiteProperties.Count == PageSize || SelectedSiteProperties.Count == SitePropertyList.Count) && TotalCount > SelectedSiteProperties.Count)
                    {
                        if (!AllSitePropertiesSelected)
                        {
                            <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                        }
                        else
                        {
                            <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                        }
                    }
                    
                    <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedSitePropertiesAsync">
                        <Icon Name="@IconName.Delete" /> @L["Delete"]
                    </Button>
                </div>
            </div>
            
            <hr class="my-1 mx-0"/>
        }
        <DataGrid TItem="SitePropertyWithNavigationPropertiesDto"
                  Data="SitePropertyList"
                  
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedSiteProperties"
                  RowSelectable="@((args) => CanDeleteSiteProperty)"
                  SelectedRowsChanged="SelectedSitePropertyRowsChanged"
                  
                  
                  
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                
                @if (CanDeleteSiteProperty && SitePropertyList.Any())
                {
                    <DataGridMultiSelectColumn TItem="SitePropertyWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                
                <DataGridEntityActionsColumn TItem="SitePropertyWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="SitePropertyWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="SitePropertyWithNavigationPropertiesDto"
                                          Visible="@CanEditSiteProperty"
                                          Clicked="async () => await OpenEditSitePropertyModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="SitePropertyWithNavigationPropertiesDto"
                                          Visible="@CanDeleteSiteProperty"
                                          Clicked="() => DeleteSitePropertyAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
               
              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.PropertyTitle"
                      Caption="@L["PropertyTitle"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.Bedrooms"
                      Caption="@L["Bedrooms"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.Bathrooms"
                      Caption="@L["Bathrooms"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.NumberOfBed"
                      Caption="@L["NumberOfBed"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.Floor"
                      Caption="@L["Floor"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.MaximumNumberOfGuest"
                      Caption="@L["MaximumNumberOfGuest"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.Livingrooms"
                      Caption="@L["Livingrooms"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.PropertyDescription"
                      Caption="@L["PropertyDescription"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.HourseRules"
                      Caption="@L["HourseRules"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.ImportantInformation"
                      Caption="@L["ImportantInformation"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.Address"
                      Caption="@L["Address"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.StreetAndBuildingNumber"
                      Caption="@L["StreetAndBuildingNumber"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.LandMark"
                      Caption="@L["LandMark"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.PricePerNight"
                      Caption="@L["PricePerNight"]">
              </DataGridColumn>

              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="SiteProperty.IsActive"
                      Caption="@L["IsActive"]">
                    <DisplayTemplate>
                        @if (context.SiteProperty.IsActive)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>


              <DataGridColumn TItem="SitePropertyWithNavigationPropertiesDto"
                      Field="PropertyType.Title"
                      Caption="@L["PropertyType"]">
              </DataGridColumn>

            </DataGridColumns>
            
            
        </DataGrid>
    </CardBody>
</Card>

