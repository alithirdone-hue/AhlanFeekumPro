            </ModalHeader>
            <ModalBody>
                <Tabs SelectedTab="@SelectedEditTab" SelectedTabChanged="@OnSelectedEditTabChanged">
                    <Items>
                        <Tab Name="siteProperty-edit-tab">@L["SiteProperty"].Value</Tab>
                        
                        <Tab Name="propertyFeatures-edit-tab">@L["PropertyFeatures"].Value</Tab>
                    </Items>
                    <Content>
                <Validations @ref="@EditingSitePropertyValidations"
                            Mode="ValidationMode.Auto"
                            Model="@EditingSiteProperty"
                            ValidateOnLoad="false">
                    <TabPanel Name="siteProperty-edit-tab">
                    
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["PropertyTitle"] *</FieldLabel>
                            <TextEdit @bind-Text="@EditingSiteProperty.PropertyTitle"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Bedrooms"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSiteProperty.Bedrooms"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Bathrooms"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSiteProperty.Bathrooms"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["NumberOfBed"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSiteProperty.NumberOfBed"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Floor"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSiteProperty.Floor"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["MaximumNumberOfGuest"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSiteProperty.MaximumNumberOfGuest"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Livingrooms"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSiteProperty.Livingrooms"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["PropertyDescription"] *</FieldLabel>
                            <MemoEdit @bind-Text="@EditingSiteProperty.PropertyDescription"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </MemoEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["HourseRules"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingSiteProperty.HourseRules"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["ImportantInformation"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingSiteProperty.ImportantInformation"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Address"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingSiteProperty.Address"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["StreetAndBuildingNumber"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingSiteProperty.StreetAndBuildingNumber"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["LandMark"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingSiteProperty.LandMark"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["PricePerNight"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSiteProperty.PricePerNight"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>


                    <Field>
                        <Check TValue="bool" @bind-Checked="@EditingSiteProperty.IsActive" >@L["IsActive"]</Check>
                    </Field>

                    <Field>
                        <FieldLabel>@L["PropertyType"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@EditingSiteProperty.PropertyTypeId">
                            @foreach (var propertyType in PropertyTypesCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(propertyType.Id)">
                                    @(propertyType.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>


                    </TabPanel>
                    <TabPanel Name="propertyFeatures-edit-tab">

                                <Row>
                                    <Column ColumnSize="ColumnSize.Is9">
                                        <Field>

                                            <Autocomplete 
                                                          Data="@PropertyFeatures"
                                                          TItem="LookupDto<Guid>"
                                                          TValue="string"
                                                          TextField="@((item) => item.DisplayName)"
                                                          ValueField="@((item) => item.Id.ToString())"
                                                          SearchChanged="@GetPropertyFeatureLookupAsync"
                                                          @bind-SelectedValue="@SelectedPropertyFeatureId"
                                                          @bind-SelectedText="@SelectedPropertyFeatureText"
                                                          Placeholder="&#8212;"/>
                                        </Field>
                                    </Column>

                                    <Column ColumnSize="ColumnSize.Is3">
                                        <Button Color="Color.Info" TextColor="TextColor.White" Size="Size.Medium" Clicked="AddPropertyFeature">
                                            <Icon class="fa fa-plus"></Icon> @L["Add"]
                                        </Button>
                                    </Column>
                                </Row>
                                @if (SelectedPropertyFeatures.Any())
                                {
                                    <Table striped-rows="true" responsive-sm="true" class="mt-2">
                                        <TableHeader>
                                            <TableHeaderCell><Span class="float-start">@L["Title"]</Span></TableHeaderCell>
                                        </TableHeader>
                                        <TableBody>
                                            @foreach (var propertyFeature in SelectedPropertyFeatures)
                                            {
                                                <TableRow>
                                                    <TableRowCell><Span class="float-start">@propertyFeature.DisplayName</Span></TableRowCell>
                                                    <TableRowCell>
                                                        <span class="btn btn-danger btn-sm float-end"
                                                              @onclick="() => SelectedPropertyFeatures.RemoveAll(s => s.Id == propertyFeature.Id)">
                                                            <Icon Class="fa fa-trash"></Icon>
                                                        </span>
                                                    </TableRowCell>
                                                </TableRow>
                                            }
                                        </TableBody>
                                    </Table>
                                }
</TabPanel>

                </Validations>
                    </Content>
                </Tabs>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditSitePropertyModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditSitePropertyForm" Clicked="UpdateSitePropertyAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
