<Modal @ref="CreateSitePropertyModal" Closing="@CreateSitePropertyModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateSitePropertyForm">
            <ModalHeader>
                <ModalTitle>@L["NewSiteProperty"]</ModalTitle>
                <CloseButton Clicked="CloseCreateSitePropertyModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Tabs SelectedTab="@SelectedCreateTab" SelectedTabChanged="@OnSelectedCreateTabChanged">
                    <Items>
                        <Tab Name="siteProperty-create-tab">@L["SiteProperty"].Value</Tab> 
                        <Tab Name="propertyFeatures-create-tab">@L["PropertyFeatures"].Value</Tab>
                    </Items>
                    <Content>
                <Validations @ref="@NewSitePropertyValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewSiteProperty"
                            ValidateOnLoad="false">
                    <TabPanel Name="siteProperty-create-tab">
                    
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["PropertyTitle"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSiteProperty.PropertyTitle"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Bedrooms"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@NewSiteProperty.Bedrooms"  Decimals="0" >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
