                            }
                        </Select>
                    </Field>


                    <Field>
                        <FieldLabel>@L["SiteProperty"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@EditingFavoriteProperty.SitePropertyId">
