                </Button>
                <SubmitButton Form="EditFavoritePropertyForm" Clicked="UpdateFavoritePropertyAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-10>*@
